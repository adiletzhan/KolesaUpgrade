<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:layout_gravity="center_horizontal">
    <LinearLayout
        android:id="@+id/allEvents_branch_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="5dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_arrow_back_bold"
            android:background="@color/black"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_logo_white"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="24sp"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_allEvents_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/events_card_layout"
        tools:itemCount="5"
        android:paddingBottom="85sp"
        android:clipToPadding="false"
        android:layout_gravity="center_horizontal">
    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/activity_allEvents_progressBar"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/all_events_favorite_button"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:padding="8dp"
        android:drawableLeft="@drawable/ic_favorite_border"
        android:drawablePadding="12dp"
        android:text="В избранные"
        android:textColor="#2A81DD"
        android:background="@drawable/bg_to_favorite_button"
        android:textAllCaps="false"
        android:layout_marginBottom="47dp"
        />
    </FrameLayout>
</LinearLayout>