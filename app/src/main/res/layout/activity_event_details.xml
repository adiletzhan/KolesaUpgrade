<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/activity_event_details_button_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:background="@drawable/ic_arrow_back_bold"
            android:clickable="true"
            android:focusable="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_logo_white"
            />

        <ImageView
            android:id="@+id/activity_event_details_image_view_to_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="16sp"
            android:background="@drawable/ic_like_big_copy_9"
            android:clickable="true"
            android:focusable="true"
            />

    </FrameLayout>

    <ProgressBar
        android:id="@+id/activity_event_details_progressBar"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/activity_event_details_text_view_speaker_is_invited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:paddingHorizontal="4sp"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="Приглашённый спикер"
                />

            <TextView
                android:id="@+id/activity_event_details_text_view_speaker_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="8sp"
                android:padding="8sp"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="Кирилл Розов"
                />

            <TextView
                android:id="@+id/activity_event_details_text_view_speaker_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:padding="5sp"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="Mobile Lead в Replika.ai"
                />


            <TextView
                android:id="@+id/activity_event_details_text_view_time_and_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:padding="5sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="15:00 - 16:00 • Зал номер 5"
                />


            <TextView
                android:id="@+id/activity_event_details_text_view_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="16sp"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="Увлекательная жизнь в панели уведомлений"
                />

            <TextView
                android:id="@+id/activity_event_details_text_view_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="16sp"
                android:layout_marginBottom="16sp"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Системные уведомления позволяют пользователям получать информацию, не заходя в приложение, и быстрее с ним взаимодействовать.Как использовать все возможности системы уведомлений? Как сделать уведомления в каждой версии ОС и использовать их возможности по максимуму? NotificationCompat не решит все за вас. Обо всем этом поговорим в докладе."
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>