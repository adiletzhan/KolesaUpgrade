<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".events.presentation.UpcomingEventsActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_upcoming_events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/branch_item"
        tools:itemCount="5"
        android:paddingBottom="85sp"
        android:clipToPadding="false"
        />
    <ProgressBar
        android:id="@+id/activity_upcoming_progressBar"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/activity_upcoming_events_toFavoritesButton"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:padding="8dp"
        android:drawableLeft="@drawable/ic_favorite_border"
        android:drawablePadding="12dp"
        android:text="В избранные"
        android:textColor="#2A81DD"
        android:background="@drawable/bg_to_favorite_button"
        android:textAllCaps="false"
        android:layout_marginBottom="47dp"
        />
</FrameLayout>